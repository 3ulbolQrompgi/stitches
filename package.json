{
  "name": "root",
  "private": true,
  "scripts": {
    "release": "preconstruct build && lerna publish",
    "build": "NODE_OPTIONS=--max_old_space_size=4096 lerna run build",
    "postinstall": "lerna bootstrap && preconstruct dev",
    "test:css": "lerna --scope @stitches/core run test",
    "test": "lerna run test"
  },
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.34",
    "dts-bundle": "^0.7.3",
    "husky": "4.2.5",
    "jest": "^25.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^9.5.0",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "semver": "^7.3.0",
    "ts-jest": "~25.3.1",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn workspaces run lint-staged"
    }
  },
  "dependencies": {
    "@babel/core": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@preconstruct/cli": "^1.1.27"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
